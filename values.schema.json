{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["hostname", "imio_id", "image"],
  "properties": {
    "hostname": {
      "type": "string",
      "description": "The hostname for the Plone application",
      "pattern": "^[a-zA-Z0-9]([a-zA-Z0-9-]*[a-zA-Z0-9])?(\\.[a-zA-Z0-9]([a-zA-Z0-9-]*[a-zA-Z0-9])?)*$"
    },
    "imio_id": {
      "type": "string",
      "description": "IMIO identifier (e.g., belleville)",
      "minLength": 1
    },
    "imio_type": {
      "type": "string",
      "description": "IMIO type (e.g., ac, cpas)"
    },
    "imio_app": {
      "type": "string",
      "description": "IMIO application name"
    },
    "plone_path": {
      "type": "string",
      "description": "Path to Plone site",
      "default": "/Plone"
    },
    "keycloak_url": {
      "type": "string",
      "description": "Keycloak URL for authentication",
      "format": "uri"
    },
    "environment": {
      "type": "string",
      "description": "Deployment environment",
      "enum": ["dev", "staging", "prod"]
    },
    "language": {
      "type": "string",
      "description": "Default language",
      "default": "fr"
    },
    "replicaCount": {
      "type": "integer",
      "minimum": 1,
      "default": 1
    },
    "image": {
      "type": "object",
      "required": ["repository"],
      "properties": {
        "repository": {
          "type": "string",
          "description": "Docker image repository"
        },
        "pullPolicy": {
          "type": "string",
          "enum": ["Always", "IfNotPresent", "Never"],
          "default": "IfNotPresent"
        },
        "tag": {
          "type": "string",
          "description": "Docker image tag"
        }
      }
    },
    "service": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["ClusterIP", "NodePort", "LoadBalancer"],
          "default": "ClusterIP"
        },
        "port": {
          "type": "integer",
          "minimum": 1,
          "maximum": 65535,
          "default": 8080
        }
      }
    },
    "ingress": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true
        },
        "className": {
          "type": "string"
        },
        "annotations": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        "hosts": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "host": {
                "type": "string"
              },
              "paths": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "path": {
                      "type": "string"
                    },
                    "pathType": {
                      "type": "string",
                      "enum": ["Prefix", "Exact", "ImplementationSpecific"]
                    }
                  }
                }
              }
            }
          }
        },
        "tls": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "secretName": {
                "type": "string"
              },
              "hosts": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "resources": {
      "type": "object",
      "properties": {
        "limits": {
          "type": "object",
          "properties": {
            "cpu": {
              "type": ["string", "number"]
            },
            "memory": {
              "type": "string"
            }
          }
        },
        "requests": {
          "type": "object",
          "properties": {
            "cpu": {
              "type": ["string", "number"]
            },
            "memory": {
              "type": "string"
            }
          }
        }
      }
    },
    "autoscaling": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false
        },
        "minReplicas": {
          "type": "integer",
          "minimum": 1
        },
        "maxReplicas": {
          "type": "integer",
          "minimum": 1
        },
        "targetCPUUtilizationPercentage": {
          "type": "integer",
          "minimum": 1,
          "maximum": 100
        }
      }
    },
    "postgresql": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false
        },
        "auth": {
          "type": "object",
          "properties": {
            "database": {
              "type": "string"
            },
            "username": {
              "type": "string"
            },
            "password": {
              "type": "string"
            }
          }
        }
      }
    },
    "solr": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false
        },
        "port": {
          "type": "integer",
          "default": 8983
        }
      }
    },
    "memcached": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true
        }
      }
    },
    "externalSecret": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false
        },
        "secretStoreName": {
          "type": "string"
        },
        "secrets": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["secretKey", "remoteRef"],
            "properties": {
              "secretKey": {
                "type": "string"
              },
              "remoteRef": {
                "type": "object",
                "required": ["key", "property"],
                "properties": {
                  "key": {
                    "type": "string"
                  },
                  "property": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
